{
    "configurations": [
        {
            "name": "Docker: Python - Django",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}/djangoblog",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "django",
                "env": {
                    "DJANGO_ENV": "local",
                    "DJANGO_SETTINGS_MODULE": "djangoblog.settings",
                    "DEBUGPY_PROCESS_SPAWN_TIMEOUT": 120
                },
                "autoReload": {
                    "enable": true
                },
            },
        }
    ]
}
