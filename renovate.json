{
    "lockFileMaintenance": {
        "enabled": true
    },
    "extends": [
        "config:best-practices"
    ],
    "packageRules": [
        {
            "matchManagers": [ "pep621" ],
            "enabled": true,
            "matchUpdateTypes": [ "major", "minor" ]
        },
        {
            "matchManagers": [ "pep621" ],
            "matchUpdateTypes": [ "patch" ],
            "automerge": true
        }
    ],
    "prConcurrentLimit": 10,
    "prHourlyLimit": 10
}
