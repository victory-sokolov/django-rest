{
    "lockFileMaintenance": {
        "enabled": true
    },
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "matchManagers": [ "pep621" ],
            "enabled": true,
            "versioning": "pep440",
            "updateTypes": [ "major", "minor", "patch" ]
        },
        {
            "matchManagers": [ "pep621" ],
            "matchDepTypes": [ "devDependencies" ], // Only dev dependencies
            "automerge": true, // Enable auto-merge for dev dependencies
            "labels": [ "dependencies", "dev" ]
        }
    ],
    "prConcurrentLimit": 10,
    "prHourlyLimit": 10
}
