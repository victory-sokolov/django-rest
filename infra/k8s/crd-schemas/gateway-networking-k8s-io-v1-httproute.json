{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gateway-api.sigs.k8s.io/schemas/gateway-networking-k8s-io-v1-httproute.json",
  "type": "object",
  "properties": {
    "apiVersion": {
      "const": "gateway.networking.k8s.io/v1"
    },
    "kind": {
      "const": "HTTPRoute"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "namespace": { "type": "string" },
        "labels": { "type": "object" },
        "annotations": { "type": "object" }
      },
      "required": ["name"]
    },
    "spec": {
      "type": "object",
      "properties": {
        "parentRefs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "namespace": { "type": "string" },
              "sectionName": { "type": "string" },
              "port": { "type": "integer" },
              "group": { "type": "string" },
              "kind": { "type": "string" }
            },
            "required": ["name"]
          }
        },
        "hostnames": {
          "type": "array",
          "items": { "type": "string" }
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "backendRefs": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "namespace": { "type": "string" },
                    "port": { "type": "integer" },
                    "group": { "type": "string" },
                    "kind": { "type": "string" },
                    "weight": { "type": "integer" }
                  },
                  "required": ["name", "port"]
                }
              },
              "filters": { "type": "array" },
              "matches": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "object",
                      "properties": {
                        "type": { "type": "string" },
                        "value": { "type": "string" }
                      }
                    },
                    "method": { "type": "string" },
                    "headers": { "type": "array" },
                    "queryParams": { "type": "array" }
                  }
                }
              }
            }
          }
        }
      },
      "required": ["parentRefs"]
    }
  },
  "required": ["apiVersion", "kind", "metadata", "spec"]
}
